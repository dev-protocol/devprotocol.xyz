---
import Footer from '@components/Global/Footer.astro'

import Navigation from '../components/Global/Navigation.vue'

const { metaTitle } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{metaTitle}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href='../src/styles/global.css' />
    <meta
      name="description"
      content="Our mission is empowering all creators for sustainable challenges. Decentralized funding for sustainable creator economy is here.ðŸ‘¾ "
    />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content={`${Astro.url.origin}/assets/og.png`} />
    <meta
      property="og:description"
      content="Decentralized funding, Social tokens, DAOs and everything you need for a sustainable creator economy is here.ðŸ‘¾"
    />
    <meta property="og:site_name" content="Dev Protocol" />
    <meta name="twitter:site" content="@devprtcl" />
    <meta name="twitter:creator" content="@devprtcl" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta
      name="twitter:description"
      content="Decentralized funding, Social tokens, DAOs and everything you need for a sustainable creator economy is here.ðŸ‘¾"
    />
    <meta name="twitter:image" content={`${Astro.url.origin}/assets/og.png`} />
    <script src="https://d3js.org/d3.v7.min.js"></script>
  </head>

  <body
    class="font-body text-gray-900 dark:bg-darkPrimary dark:text-white mt-24"
  >
    <Navigation client:visible />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
